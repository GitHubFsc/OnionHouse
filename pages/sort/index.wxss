/* pages/sort/index.wxss */
/* 搜索 */
.sort_search {
  width: 710rpx;
  height: 72rpx;
  margin: 0 auto;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(229, 229, 229, 1);
  border-radius: 10rpx;
  font-size: 26rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 72rpx;
}

.sort_search image {
  width: 26rpx;
  height: 26rpx;
  margin-left: 249rpx;
  margin-right: 20rpx;
}

/* 轮播导航 */
.sort_swiper swiper {
  width: 100%;
  height: 210rpx;
}
.sort_nav {
  width: 130rpx;
  height: 140rpx;
  font-size: 26rpx;
  color: rgba(102, 102, 102, 1);
  text-align: center;
}

.sort_nav image {
  width: 81rpx;
  height: 81rpx;
  margin-top: 37rpx;
  margin-bottom: 24rpx;
}

.sort_nav .active {
  font-size: 26rpx;
  color: rgba(101, 193, 121, 1);
  transform: none;
  transition: all 0.2s ease-in 0s;
}

.active image {
  width: 93rpx;
  height: 93rpx;
  border: 1rpx solid rgba(101, 193, 121, 1);
  border-radius: 40rpx;
  margin-top: 31rpx;
  margin-bottom: 17rpx;
}

/* 分类导航 */
.sort_content {
  width: 100%;
  height: auto;
  display: flex;
}

.sc_left {
  width: 200rpx;
  height: auto;
}

.sc_left_tab {
  width: 100%;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  font-size: 28rpx;
  color: #333333;
  background-color: #FAFAFC;
}

.sc_left .active {
  background-color: #ffffff;
}

.sc_right {
  width: 550rpx;
  height: auto;
}
.scr_filter{
  width: 100%;
  height: 80rpx;
  display: flex;
  border-bottom: 1rpx solid rgba(229,229,229,1);
  margin-bottom: 40rpx;
}
.price,.sales{
  width: 200rpx;
  height: 80rpx;
  margin-left: 120rpx;
  display: flex;
}
.scrt_txt {
  width: 60rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  margin-right: 10rpx;
}

.scrt_img {
  width: 14rpx;
  height: 32rpx;
  margin-right: 16rpx;
  margin-top: 30rpx;
  position: relative;
}
.scrt_img  image:nth-child(1){
  width: 14rpx;
  height: 8rpx;
  position: absolute;
  top: 0; left: 0;
} 
.scrt_img  image:nth-child(2){
  width: 14rpx;
  height: 8rpx;
  position: absolute;
  top: 18rpx; left: 0;
} 

.article {
  width: 550rpx;
  height: 220rpx;
  display: flex;
}

.article .article_img image {
  width: 180rpx;
  height: 180rpx;
  margin-top: 22rpx;
  margin-left: 43rpx;
  margin-right: 16rpx;
}

.article .article_name {
  padding-left: 20rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.article .article_weight {
  padding-left: 20rpx;
  margin-top: 18rpx;
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
}

.article .article_price {
  width: auto;
  height: 30rpx;
  position: relative;
  padding-left: 20rpx;
}

.article .article_price text {
  margin-top: 14rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(255, 168, 0, 1);
}

.article .article_price image {
  width: 56rpx;
  height: 56rpx;
  position: absolute;
  top: 0rpx;
  left: 236rpx;

}