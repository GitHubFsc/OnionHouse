/* pages/ShoppingCart/index.wxss */
/* 编辑 */
.cart_edit {
  width: 710rpx;
  height: 88rpx;
  margin: 0 auto;
  padding: 0 20rpx;
  text-align: right;
  line-height: 88rpx;
  font-size: 30rpx;
  color: rgba(51, 51, 51, 1);
  background: rgba(255, 255, 255, 1);
  position: fixed;
  top:0;
  left: 0;
  border-bottom: 1rpx solid #E5E5E5;
}

.gengduo {
  width: 16rpx;
  height: 30rpx;
}

/* 商家/商品 */

.cart_contents {
  width: 750rpx;
  height: auto;
  /* border-top: 1rpx solid #E5E5E5; */
  margin-top: 88rpx;
  margin-bottom: 90rpx;
}

.cart_content {
  width: 100%;
  height: auto;
}

.cart_merchant {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  border-bottom: 1rpx solid #E5E5E5;
}

.cm_all,
.cc_active {
  width: 77rpx;
  height: 100%;
  position: relative;
}

.cm_all image,
.cc_active image {
  width: 37rpx;
  height: 37rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.cm_name {
  width: 600rpx;
  height: 100%;
  line-height: 100rpx;
  text-align: left;
  font-size: 32rpx;
  font-family: PingFang;
  font-weight: bold;
  color: rgba(0, 0, 51, 1);
}

.cart_commodity {
  width: 710rpx;
  height: 220rpx;
  margin: 0 auto;
  display: flex;
  border-bottom: 1rpx solid #E5E5E5;
}

.cc_img {
  width: 160rpx;
  height: 160rpx;
  margin-left: 22rpx;
  margin-top: 31rpx;
}

.cc_img image {
  width: 125rpx;
  height: 100rpx;
  margin: 18rpx;
}

.cc_short {
  width: 308rpx;
  height: auto;
  margin-left: 10rpx;
}

.cc_short view:nth-child(1) {
  font-size: 30rpx;
  color: rgba(51, 51, 51, 1);
  margin-top: 33rpx;
}

.cc_short view:nth-child(2) {
  font-size: 26rpx;
  color: rgba(153, 153, 153, 1);
  margin-top: 18rpx;
  margin-bottom: 36rpx;
}

.cc_short view:nth-child(3) {
  font-size: 24rpx;
  color:rgba(255,168,0,1);
}

.cc_total {
  width: 186rpx;
  height: 44rpx;
  display: flex;
  margin-top: 144rpx;
  text-align: center;
}
.cc_total_txt{
  width: 96rpx;
  height: 44rpx;
  text-align: center;
}
.cc_total image {
  width: 44rpx;
  height: 44rpx;
}

.cart_total {
  width: 100%;
  height: 119rpx;
  display: flex;
}

.cart_total .cart_total_left {
  width: 150rpx;
  height: 100%;
  margin-left: 18rpx;
  margin-right: 100rpx;
  line-height: 119rpx;
  text-align: left;
}

.cart_total .cart_total_right {
  width: 445rpx;
  height: 72rpx;
  line-height: 72rpx;
  margin-top: 25rpx;
  display: flex;
}

.cart_total .cart_total_right view:nth-child(1) {
  width: 245rpx;
  height: 100%;
  border-radius: 36rpx 0 0 36rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(25, 95, 40, 1);
  background-color: rgba(241, 241, 241, 1);
}

.cart_total .cart_total_right view:nth-child(2) {
  width: 200rpx;
  height: 100%;
  border-radius: 0 36rpx 36rpx 0;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(241, 241, 241, 1);
  background-color: rgba(101, 193, 121, 1);
}

/* 全选 */
.cart_bot {
  width: 710rpx;
  height: 100rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  background-color: #ffffff;
  line-height: 100rpx;
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
}

.select_all {
  width: 37rpx;
  height: 100%;
  margin-right: 10rpx;
  position: relative;
}

.select_all image {
  width: 37rpx;
  height: 37rpx;
  position: relative;
  top: 8rpx;
  left: 0;
}

.select_txt {
  width: 60rpx;
  height: 100%;
}

.select_total {
  width: 400rpx;
  text-align: right;
}

.select_btn {
  width: 180rpx;
  height: 88rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 1);
  background: rgba(153, 153, 153, 1);
  border-radius: 44rpx;
  text-align: center;
  line-height: 88rpx;
  position: absolute;
  top: 6rpx;
  left: 550rpx;
}